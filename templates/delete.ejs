<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Basic HTML5 Document" />
    <meta name="keywords" content="HTML5, Responsive" />
    <link rel="stylesheet" href="style.css"/>
    <title>forgetfulness.io</title>
</head>

<body>
    <h1>delete events</h1>

    <div class="listContainer">
        <%- reminderTable %>
        <form class="delete" action="/delete" method="post">
            <input type="text" name="toDelete" placeholder=" e.g. dr appt">
            <span>&nbsp;&nbsp;</span>
            <input type="submit" value="Delete Reminder">
        </form>
    </div>



    <div class="outerCardCreate">
        <div id="Card" class="card">
            <a href="/">home</a>
        </div>
        <div id="createCard" class="card">
            <a href="/create">create reminder</a>
        </div>
    </div>


    <script>
        document.getElementById('Card').addEventListener('click', change);
        document.getElementById('createCard').addEventListener('click', change);
        function change() {
            let endPoint = this.id.replace('Card', '');
            window.location.href = window.location.href.substring(0, window.location.href.indexOf('create')) + endPoint
        }
    </script>
</body>

</html>