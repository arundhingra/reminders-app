<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Basic HTML5 Document" />
    <meta name="keywords" content="HTML5, Responsive" />
    <link rel="stylesheet" href="style.css"/>
    <title>forgetfulness.io</title>
</head>

<body>
    <h1>forgetfulness.io</h1>

    <div class="outerCard">
        <div id="createCard" class="card">
            <a href="/create">create a reminder</a><br>
        </div>
        <div id="listCard" class="card">
            <a href="/list">list reminders</a><br>
        </div>
        <div id="deleteCard" class="card">
            <a href="/delete">delete reminders</a>
        </div>
    </div>

    
    <script>
        document.getElementById('createCard').addEventListener('click', change);
        document.getElementById('listCard').addEventListener('click', change);
        document.getElementById('deleteCard').addEventListener('click', change);
        function change() {
            let endPoint = this.id.replace('Card', '');
            window.location.href += endPoint;
        }
    </script>

</body>

</html>