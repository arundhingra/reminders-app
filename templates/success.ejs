<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Basic HTML5 Document" />
    <meta name="keywords" content="HTML5, Responsive" />
    <link rel="stylesheet" href="style.css"/>
    <title>forgetfulness.io</title>
</head>

<body>
    <div class="empty"></div>
    <h1 class="success">success</h1>
    <div class="empty"></div>

    <div class="outerCardCreate">
        <div id="Card" class="card">
            <a href="/">home</a>
        </div>
        <div id="createCard" class="card">
            <a href="/create">create another</a>
        </div>
        <div id="listCard" class="card">
            <a href="/list">show reminders</a>
        </div>
    </div>
</body>


<script>
    document.getElementById('Card').addEventListener('click', change);
    document.getElementById('createCard').addEventListener('click', change);
    document.getElementById('listCard').addEventListener('click', change);
    function change() {
        let endPoint = this.id.replace('Card', '');
        window.location.href = window.location.href.substring(0, window.location.href.lastIndexOf('/')) + endPoint
    }
</script>
</html>