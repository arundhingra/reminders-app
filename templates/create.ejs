<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Basic HTML5 Document" />
    <meta name="keywords" content="HTML5, Responsive" />
    <link rel="stylesheet" href="../style.css"/>
    <title>forgetfulness.io</title>
</head>

<body>
    <h1>create a reminder</h1>
    
    <div class="createContainer">
        <form action="/create" method="post">
            <label class="lab" for="name">event: </label>
            <input id="name" name="name" type="text" placeholder=" e.g. dr appt">
            <span>&nbsp;&nbsp;</span>
            <input id="event" name="eventTime" type="datetime-local">
            <br><br>
            <label for="alarm" class="lab">alarm time: </label>
            <input id="alarm" name="alarmTime" type="time">
            <br><br>

            <label for="type" class="lab">type: </label><br>
            <input class="radio" type="radio" name="type" value="default" id="typeDef">
            <label for="typeDef">Default</label>
            <br>
            <input class="radio" type="radio" name="type" value="custom" id="typeCus">
            <label for="typeCus">Custom</label>
            <div id="custom" hidden>
                <br>
                <label for="custAlarm1" class="lab">reminder 1: </label>
                <input name="custAlarm1" type="datetime-local" onfocusout="createNewAlert()">
            </div>
            <br><br>
            <input type="submit" value="Save Reminder">
        </form>
    </div>
    <script src="../create_util.js"></script>

    <div class="outerCardCreate">
        <div id="Card" class="card">
            <a href="/">home</a>
        </div>
        <div id="listCard" class="card">
            <a href="/list">show reminders</a>
        </div>
    </div>


    <script>
        document.getElementById('Card').addEventListener('click', change);
        document.getElementById('listCard').addEventListener('click', change);
        function change() {
            let endPoint = this.id.replace('Card', '');
            window.location.href = window.location.href.substring(0, window.location.href.indexOf('create')) + endPoint
        }
    </script>
</body>

</html>